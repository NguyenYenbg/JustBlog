@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link px-lg-3 py-3 py-lg-4" })
            </li>
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class = "nav-link px-lg-3 py-3 py-lg-4">Log off</a></li>
        </ul>
    }
}
else
{

    <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link px-lg-3 py-3 py-lg-4" })</li>
    <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link px-lg-3 py-3 py-lg-4" })</li>

}
